@model LMS10_1.Models.Category

@{
    ViewData["Title"] = "Edit";
}
<style>
    .custom-margin-top {
        margin-top: 100px; /* يمكنك تغيير القيمة كما ترغب */
    }
</style>

<h1>Edit Category</h1>

<h4>Category Details</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- حقل مخفي لفئة المعرف -->
            <input type="hidden" asp-for="CategoryId" />

            <!-- اسم الفئة -->
            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label fw-bold"></label>
                <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <!-- صورة الفئة -->
            <div class="mb-3">
                <label asp-for="Image" class="form-label fw-bold"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- زر الحفظ -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
