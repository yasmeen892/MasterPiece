@model LMS10_1.Models.Category

@{
    ViewData["Title"] = "Details";
}
<style>
    .custom-margin-top {
        margin-top: 100px; /* يمكنك تغيير القيمة كما ترغب */
    }
</style>

<h1 class="text-center mb-4">Category Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Details for @Model?.CategoryName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold text-primary">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
            <dt class="col-sm-3 font-weight-bold text-primary">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model?.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Category Image" class="img-thumbnail" style="max-height: 200px; max-width: 200px;" />
                }
                else
                {
                    <span class="text-muted">No Image Available</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning btn-sm">Edit</a>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
    </div>
</div>
