@model LMS10_1.Models.Category

@{
    ViewData["Title"] = "Courses in " + Model.CategoryName;
}

<h3 style="margin-bottom: 20px; text-align: center;">Courses in @Model.CategoryName</h3>

@if (Model.Courses != null && Model.Courses.Any())
{
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var course in Model.Courses)
            {
                <div class="col-12 mb-4" style="max-width: 800px;">
                    <!-- تضيف المسافة وتحدد العرض -->
                    <div class="card card-item card-preview card-item-list-layout">
                        <!-- Course Image -->
                        <div class="card-image">
                            <a href="@Url.Action("Details", "Courses", new { id = course.CoursesId })" class="d-block">
                                <img class="card-img-top lazy"
                                     src="images/img-loading.png"
                                     data-src="@course.ImagePath"
                                     alt="@course.CourseName" />
                            </a>
                        </div>

                        <div class="card-body">
                            <!-- Level Information -->
                            <h6 class="ribbon ribbon-blue-bg fs-14 mb-3">All Levels</h6>
                            <!-- Course Title -->
                            <h5 class="card-title" style="font-size: 1rem;">
                                <a href="@Url.Action("Home", "CDetails", new { id = course.CoursesId })">@course.CourseName</a>
                            </h5>

                            <!-- Price and Wishlist -->
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-price text-black font-weight-bold">
                                    @course.Price
                                    <span class="before-price font-weight-medium">@course.PriceBeforeDiscount</span>
                                </p>
                            </div>
                        </div>
                        <!-- end card-body -->
                    </div>
                    <!-- end card -->
                </div>
            }
        </div>
    </div>
}
else
{
    <p>No courses available in this category.</p>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Categories</a>
